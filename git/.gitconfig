# User settings
[user]
	name = Dom Chester
	email = dom.chester@me.com

	# GPG key
	signingkey = 079BB9619878F192

[tag]
	# Always sign tags
	gpgSign = true

	# Always sign annotated tags
	forceSignAnnotated = true

[core]
	# Use Sublime text editor
	editor = '/Applications/Sublime Text.app/Contents/SharedSupport/bin/subl' -n -w

	# use global custom gittignore
	excludesfile = ~/.gitignore

[color]
	# Use coloured output
  ui = auto

[push]
	# Defaults 'git push origin' to push the current branch only
  default = current

[commit]
	# Sign all commits
	gpgsign = true
	template = /Users/dom/.stCommitMsg

# Substitues :gh to github in urls
[url "https://github.com/"]
    insteadOf = gh:

# Use SSH instead of HTTPS for github repos
[url "git@github.com:"]
	insteadOf = https://github.com/

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =

[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[init]
	defaultBranch = main

[pull]
	rebase = false

[github]
	user = Dom-TC
[status]
	submoduleSummary = true

