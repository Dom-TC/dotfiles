# User settings
[user]
	name = Dom Chester
	email = dom.chester@me.com
	signingkey = ssh-rsa 

	# GPG key

[tag]
	# Always sign tags
	gpgSign = true

	# Always sign annotated tags
	forceSignAnnotated = true

[core]
	# Use VS Code text editor
	editor = '/Applications/Visual Studio Code.app/Contents/Resources/app/bin/code'

	# use global custom gittignore
	excludesfile = ~/.gitignore

[color]
	# Use coloured output
  ui = auto

[push]
	# Defaults 'git push origin' to push the current branch only
  default = current

[commit]
	# Sign all commits
	gpgsign = true
	template = /Users/dom/.stCommitMsg

# Substitutes :gh to github in urls
[url "https://github.com/"]
    insteadOf = gh:

# Use SSH instead of HTTPS for github repos
[url "git@github.com:"]
	insteadOf = https://github.com/

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[init]
	defaultBranch = main

[pull]
	rebase = false

[github]
	user = Dom-TC

[status]
	submoduleSummary = true

[gpg]
	format = ssh

[gpg "ssh"]
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
	allowedSignersFile = /Users/dom/.config/git/allowed_signers

[diff]
	tool = Kaleidoscope

[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[difftool]
	prompt = false
	trustExitCode = true

[merge]
	tool = Kaleidoscope

[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true
	
[mergetool]
	prompt = false
	keepBackup = true
